<div class="modal-container">
    <div class="modal-section__thumb">
        <div class="trailer-btn__overlay">
            <span id="modal-trailer-youtube" class="material-icons trailer-btn" data-id="{{id}}">
                play_circle_outline
            </span>
        </div>
        <img class="modal-section__image" src="{{poster_path}}" alt="{{title}}{{name}} poster"
            alt="{{title}}{{name}} poster">
        {{!-- <span id="modal-trailer-youtube" class="material-icons trailer-btn" data-id="{{id}}">
            play_circle_outline
        </span> --}}
    </div>
    <div class="modal-section__meta">
        <h2 class="modal-meta__title">{{title}}{{name}}</h2>
        <div class="modal-meta__info">
            <ul class="modal-info__list">
                <li>Vote / Votes</li>
                <li>Popularity</li>
                <li>Original Title</li>
                <li>Genre</li>
            </ul>
            <ul class="modal-info__list">
                <li><span>{{vote_average}}</span>/<span>{{vote_count}}</span></li>
                <li>{{popularity}}</li>
                <li>{{original_title}}{{original_name}}</li>
                <li>{{genre_ids}}</li>
            </ul>
        </div>
        <h3 class="modal-meta__title description">About</h3>
        <p class="modal-meta__text">{{overview}}</p>
        <div class="modal-meta__btn-wrap">
            <button type="button" data-id="{{id}}" data-watched="watched" data-modalwatched="watched">add to
                Watched</button>
            <button type="button" data-id="{{id}}" data-queue="queue" data-modalqueue="queue">add to queue</button>
            
        </div>
        <div class="modal-meta_similar-movies">
            <h3>Similar Movies</h3>
            <ul class="modal-meta_similar-movies-list film-list js-ul-film"></ul>
        </div>
    </div>
</div>